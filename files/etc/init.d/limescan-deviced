depend() {
        before netmount nfsmount
        use net
}

start() {
        ebegin "Starting limescan-deviced"
        /sbin/start-stop-daemon -b \
                --exec /usr/local/bin/limescan-deviced \
                --start
        eend $?
}

stop() {
        ebegin "Stopping limescan-deviced"
        /sbin/start-stop-daemon -K --name limescan-deviced
        eend $?
}

